<script src="/socket.io/socket.io.js"></script>

<script>
  $(document).ready(function() {
    // Bağlantı kurulumu
    const socket = io.connect();

    // Butonlara olay dinleyicisi ekleme
    $(".buy-button").click(function () {
        socket.emit('stock-update', this.id);
    });

    // Socket.io üzerinden gelen verileri dinleme
    socket.on('updateStock', function(updatedProduct) {
      $('#buy-' + updatedProduct.id).closest('tr').find('.table-stock').text(updatedProduct.stock);
    });
  });
  


  
</script>


